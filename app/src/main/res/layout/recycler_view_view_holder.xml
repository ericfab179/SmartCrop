<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="autoIrrigationTaskViewModel"
            type="com.smartcrops.ericfab17.smartcrop.viewModel.AutomaticIrrigationTaskViewModel"/>
    </data>
    <LinearLayout
        android:id="@+id/taskLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/autoIrrigTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{autoIrrigationTaskViewModel.date}"
            tools:text="19/09/2017"/>
        <TextView
            android:id="@+id/autoIrrigTaskTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{autoIrrigationTaskViewModel.initTime}"
            tools:text="10:00:00"/>
        <TextView
            android:id="@+id/autoIrrigTaskWater"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{autoIrrigationTaskViewModel.water}"
            tools:text="12 L"/>


    </LinearLayout>

</layout>
